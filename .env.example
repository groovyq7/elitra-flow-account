# ============================================================
# Elitra Flow Account — Environment Variables
# ============================================================
# Copy this file to .env.local and fill in the values.
# NEVER commit real secrets or private keys to version control.
#
# Naming conventions:
#   NEXT_PUBLIC_* — client-side (bundled into browser JS, visible to users)
#   All others   — server-side only (Node.js process, never sent to browser)
# ============================================================


# ── Authentication ────────────────────────────────────────────
# Required — Privy authentication app ID
# Use the "Elitra Fork" app (cmlsy3eup004z0cjskfxwce8n) — NOT the Zentra app.
# After deploying to a new domain, add the domain to the allowed origins list
# in the Privy dashboard for this app.
NEXT_PUBLIC_PRIVY_APP_ID=cmlsy3eup004z0cjskfxwce8n


# ── Wallet Connect ────────────────────────────────────────────
# Required — WalletConnect v2 project ID (get one at cloud.walletconnect.com)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id


# ── SpiceNet Relayer ──────────────────────────────────────────
# Optional — SpiceNet relayer API URL for EIP-7702 transaction submission
# Defaults to '/api/relayer' (local Next.js proxy route) if not set.
# Override to point at a different relayer (testnet or mainnet).
# Example testnet: https://tx-submission-testnet.spicenet.io
NEXT_PUBLIC_RELAYER_API_URL=/api/relayer


# ── Analytics (PostHog) ───────────────────────────────────────
# Optional — PostHog analytics project API key
# If omitted, analytics are disabled silently.
NEXT_PUBLIC_POSTHOG_KEY=phc_your_posthog_project_api_key_here

# Optional — PostHog API host (defaults to https://eu.i.posthog.com)
NEXT_PUBLIC_POSTHOG_HOST=https://eu.i.posthog.com


# ── MongoDB (Campaign Registrations) ─────────────────────────
# Required (server-side) — MongoDB connection string for storing
# campaign/waitlist wallet registrations.
# Used by: actions/mongo.action.ts, app/api/campaign/register/route.ts
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/elitra?retryWrites=true&w=majority


# ── GraphQL / Indexer ─────────────────────────────────────────
# Optional (server-side) — HyperIndex GraphQL endpoint for vault data
# Defaults to: https://indexer.dev.hyperindex.xyz/18880d0/v1/graphql
# Used by: actions/query.action.ts, lib/utils/query.ts
GRAPHQL_ENDPOINT=https://indexer.dev.hyperindex.xyz/18880d0/v1/graphql


# ── SEI Mainnet RPC ───────────────────────────────────────────
# Optional (server-side) — RPC URL for SEI mainnet read-only calls
# (e.g., Takara/Yei protocol API routes). Defaults to public SEI RPC.
# Used by: app/api/protocols/takara/route.ts, app/api/protocols/yei/route.ts
RPC_URL=https://evm-rpc.sei-apis.com


# ── Contract Addresses (SEI Mainnet — chain 1329) ─────────────
# Optional — Override on-chain contract addresses for SEI mainnet.
# Defaults are hardcoded in lib/constants.ts.
NEXT_PUBLIC_VAULT_ADDRESS_1329_SEI=0xE41A97bCfc4c23Db5A5dE9f0e79df751F7562C04
NEXT_PUBLIC_TELLER_ADDRESS_1329_SEI=0xCb428680885a6F9D1EbF83f492Cde733902fCB7f
NEXT_PUBLIC_ACCOUNTANT_ADDRESS_1329_SEI=0x25De27f15c1c1697dFF38b8A379B113E616ABe58


# ── Contract Addresses (Citrea Testnet — chain 5115, CBTC vault) ─
# Optional — Override contract addresses for Citrea Testnet CBTC vault.
NEXT_PUBLIC_VAULT_ADDRESS_5115_CBTC=0xYourCitreaCbtcVaultAddress
NEXT_PUBLIC_TELLER_ADDRESS_5115_CBTC=0xYourCitreaCbtcTellerAddress
NEXT_PUBLIC_ACCOUNTANT_ADDRESS_5115_CBTC=0xYourCitreaCbtcAccountantAddress


# ── Contract Addresses (Citrea Testnet — chain 5115, NUSD vault) ─
# Optional — Override contract addresses for Citrea Testnet NUSD vault.
NEXT_PUBLIC_VAULT_ADDRESS_5115_NUSD=0xYourCitreaNusdVaultAddress
NEXT_PUBLIC_TELLER_ADDRESS_5115_NUSD=0xYourCitreaNusdTellerAddress
NEXT_PUBLIC_ACCOUNTANT_ADDRESS_5115_NUSD=0xYourCitreaNusdAccountantAddress


# ── Test / Development Only ───────────────────────────────────
# WARNING: Never set these in production.

# Optional — Enable test wallet auto-connect (for Playwright E2E tests only)
# Set to "true" to inject a mock wallet connector instead of real wallets.
NEXT_PUBLIC_USE_TEST_WALLET=false

# Optional — Ethereum address of the test wallet (used when USE_TEST_WALLET=true)
NEXT_PUBLIC_TEST_WALLET_ADDRESS=0xc6D299a212868f12A5F05f9e414Af662615aF715

# Optional (server-side, test only) — Private key for the test wallet used in
# Playwright tests to sign transactions. NEVER use a funded mainnet key here.
TEST_WALLET_PRIVATE_KEY=0xdeadbeefdeadbeefdeadbeefdeadbeefdeadbeefdeadbeefdeadbeefdeadbeef

# Optional — Next.js server actions encryption key (auto-generated if unset)
NEXT_SERVER_ACTIONS_ENCRYPTION_KEY=


